{
    "name": "Redmine Plugin",
    "description": "BC 软件部 Redmine 插件",
    "version": "1.8",
    "manifest_version": 3,
    "author": "彭思杭",
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "128": "/icons/128.png"
    },
    "permissions": [
        "tabs",
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "https://calendarific.com/*"
    ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "commands": {
        "fill_user_form": {
            "suggested_key": {
                "default": "Alt+G",
                "mac": "Alt+G"
            },
            "description": "填充BUG表单模板"
        },
        "open_user_time_entries": {
            "suggested_key": {
                "default": "Alt+T",
                "mac": "Alt+T"
            },
            "description": "打开用户时间条目页面"
        },
        "open_user_task": {
            "suggested_key": {
                "default": "Alt+Q",
                "mac": "Alt+Q"
            },
            "description": "打开用户任务页面"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [ "README.pdf" ],
            "matches": [ "<all_urls>" ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "http://192.168.1.145/*",
                "https://192.168.1.145/*"
            ],
            "js": [
                "scripts/fillErrorReport.js",
                "scripts/userTimeEntries.js",
                "scripts/changeOddEvenColor.js",
                "scripts/changeSelectHoverColor.js",
                "scripts/changeTaskStatusColor.js"
            ],
            "all_frames": false
        },
        {
            "matches": [
                "http://192.168.1.145/issues/*",
                "https://192.168.1.145/issues/*"
            ],
            "js": [
                "scripts/changeTaskStatus.js"
            ],
            "all_frames": false
        }
    ]
}